# ─── Sanity CMS (required) ────────────────────────────────────────────────────
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2026-02-03
# Write token — needed for /api/submit and seed scripts
SANITY_API_TOKEN=your_sanity_api_token

# ─── Resend (optional — email notifications) ─────────────────────────────────
RESEND_API_KEY=your_resend_api_key

# ─── Claude API (optional — AI enrichment pipeline) ──────────────────────────
ANTHROPIC_API_KEY=your_anthropic_api_key

# ─── PostHog Analytics (recommended — free tier: 1M events/mo) ───────────────
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=/ingest

# ─── Social Monitoring (optional — auto-discovery pipeline) ──────────────────
SOCIALDATA_API_KEY=your_socialdata_api_key
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
GITHUB_PAT=your_github_pat

# ─── Firebase (optional — Google login + bookmarks) ───────────────────────────
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
